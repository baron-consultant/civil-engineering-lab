      <img src={`${IMAGE_BASE_PATH}/floorplan/floorplan_01.svg`} alt="" />
    </div>
      

      <!-- 링크 -->
      <ul>
        <li>
          <a class="link-atrb-block" href="/eg-bim_guide/help/floorplan02">
