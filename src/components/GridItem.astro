---
const { title } = Astro.props;
---

<div class="grid-item">
    <div class="media">
        <slot name="media" />
    </div>
    <div class="content">
        {title && <h3>{title}</h3>}
        <slot name="content" />
    </div>
</div>

<style>
    .grid-item {
        border: 1px solid var(--sl-color-gray-5);
        border-radius: 8px;
        overflow: hidden;
        background: var(--sl-color-bg-nav);
    }

    .media img {
        width: 100%;
        height: 200px;
        object-fit: cover;
        display: block;
    }

    .content {
        padding: 1rem;
    }

    .content h3 {
        margin-top: 0;
        font-size: 1.1rem;
    }
</style>
