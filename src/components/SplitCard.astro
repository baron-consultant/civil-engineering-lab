---
interface Props {
    reverse?: boolean;
}

const { reverse = false } = Astro.props;
---

<div class={`split-card ${reverse ? "reverse" : ""}`}>
    <div class="content">
        <slot name="content" />
    </div>
    <div class="media">
        <slot name="media" />
    </div>
</div>

<style>
    .split-card {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        margin: 2rem 0;
        align-items: center;
    }

    @media (min-width: 50rem) {
        .split-card {
            flex-direction: row;
        }
        .split-card.reverse {
            flex-direction: row-reverse;
        }
    }

    .content,
    .media {
        flex: 1;
        width: 100%;
    }

    .media img {
        border-radius: 8px;
        box-shadow: var(--sl-shadow-md);
        width: 100%;
        height: auto;
    }
</style>
